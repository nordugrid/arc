  # Start Menu
  createDirectory "$SMPROGRAMS\${COMPANYNAME}"

  createShortCut "$SMPROGRAMS\${COMPANYNAME}\ARC Storage Explorer.lnk" "$INSTDIR\bin\arcstorage-ui.exe" "" "" "" \
                 SW_SHOWNORMAL ALT|CONTROL|SHIFT|F5 "Browse Grid storage resources"
