  SendMessage ${HWND_BROADCAST} ${WM_WININICHANGE} 0 "STR:Environment" /TIMEOUT=5000

  ${EnvVarUpdate} $0 "PATH" "A" "HKLM" "$INSTDIR\bin"  ; Append the new one
  ${EnvVarUpdate} $0 "PATH" "A" "HKLM" "$INSTDIR\lib"  ; Append the new one
