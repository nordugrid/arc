Package: nordugrid-arc-acix-index
Architecture: all
Depends: ${misc:Depends}, ${python:Depends}, libarccommon3 (>= ${source:Version}), nordugrid-arc-acix-core (= ${source:Version}), lsb-base (>= 3.0-6)
